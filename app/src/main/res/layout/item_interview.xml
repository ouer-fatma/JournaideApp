<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="338dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2.6dp"
    app:cardCornerRadius="13dp"
    android:layout_margin="6.50dp"

    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6.50dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/Image"
            android:layout_width="91dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_user_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ahmed"
            android:textColor="@color/black"
            android:textSize="15.6dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/OtherName"
            android:layout_marginHorizontal="13dp"
            app:layout_constraintTop_toTopOf="@id/Image"
            app:layout_constraintStart_toEndOf="@id/Image"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/OtherName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="sami"
            android:textColor="@color/black"
            android:maxLines="1"
            android:textSize="15.6dp"
            android:layout_marginHorizontal="13dp"
            app:layout_constraintBottom_toTopOf="@id/question"
            app:layout_constraintTop_toBottomOf="@id/Name"
            app:layout_constraintStart_toEndOf="@id/Image"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="dz"
            android:textColor="@color/purple_200"
            android:textSize="13dp"
            android:maxLines="2"
            android:layout_marginHorizontal="13dp"
            app:layout_constraintTop_toBottomOf="@id/OtherName"
            app:layout_constraintStart_toEndOf="@id/Image"

            app:layout_constraintBottom_toTopOf="@+id/reponse"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/reponse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="zddz"
            android:textColor="@color/purple_200"
            android:textSize="13dp"
            android:maxLines="2"
            android:layout_marginHorizontal="13dp"
            app:layout_constraintTop_toBottomOf="@id/question"
            app:layout_constraintStart_toEndOf="@id/Image"
            app:layout_constraintEnd_toEndOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>